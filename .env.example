# Upstage API Configuration
UPSTAGE_API_KEY=your-upstage-api-key-here

# Database Configuration
DATABASE_URL=mysql+pymysql://user:password@localhost:3306/langchain_chatbot
# Alternative PostgreSQL:
# DATABASE_URL=postgresql://user:password@localhost:5432/langchain_chatbot

# Vector Database Configuration
CHROMA_PERSIST_DIRECTORY=./data/chroma_db
CHROMA_COLLECTION_NAME=langchain_docs

# Application Settings
APP_ENV=development  # development, staging, production
DEBUG=True
LOG_LEVEL=INFO

# Model Configuration
LLM_MODEL=solar-pro  # solar-pro, solar-1-mini-chat
EMBEDDING_MODEL=solar-embedding-1-large
TEMPERATURE=0.1
MAX_TOKENS=2000

# API Server Configuration
API_HOST=0.0.0.0
API_PORT=8000
WORKERS=4

# Crawling Configuration
CRAWL_DELAY=1  # seconds between requests
MAX_CRAWL_PAGES=1000
CRAWL_BASE_URL=https://python.langchain.com/

# Cache Configuration
CACHE_ENABLED=True
CACHE_TTL=3600  # seconds

# Monitoring
ENABLE_METRICS=True
METRICS_PORT=9090